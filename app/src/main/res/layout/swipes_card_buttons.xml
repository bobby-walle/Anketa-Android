<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_detail"
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/btn_detail"
        android:textColor="@color/green_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/btn_like_frame"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_200sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/btn_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_detail"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLike"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:elevation="15dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetBottom="@dimen/_6sdp"
        android:padding="0dp"
        app:icon="@drawable/ic_tick"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="src_over"
        app:layout_constraintBottom_toBottomOf="@+id/btn_detail"
        app:layout_constraintEnd_toEndOf="@+id/btn_like_frame"
        app:layout_constraintStart_toStartOf="@+id/btn_like_frame"
        app:layout_constraintTop_toTopOf="@+id/btn_like_frame" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_dislike_frame"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_detail"
        app:layout_constraintEnd_toStartOf="@+id/btn_detail"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDislike"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:elevation="15dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetBottom="@dimen/_6sdp"
        android:padding="0dp"
        app:icon="@drawable/ic_cross"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="src_over"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/btn_detail"
        app:layout_constraintEnd_toEndOf="@+id/btn_dislike_frame"
        app:layout_constraintStart_toStartOf="@+id/btn_dislike_frame"
        />

</androidx.constraintlayout.widget.ConstraintLayout>